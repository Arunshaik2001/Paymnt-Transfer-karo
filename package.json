{
  "name": "Paymnt-Transfer karo",
  "private": true,
  "scripts": {
    "build": "npm run prisma-generate && turbo build",
    "dev:user-app": "turbo dev --filter=user-app",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:docker": "npm run dev:prisma && npm run dev",
    "dev:prisma": "cd packages/db && npm run prisma:migrate && npm run prisma:seed",
    "prisma-generate": "cd packages/db && npm run prisma:generate",
    "docker-compose": "docker-compose --env-file ./.env up",
    "root": "sudo chown -R $USER /home/arun/Desktop/PaymntApp"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
